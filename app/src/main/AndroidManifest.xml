<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sepiacodingtask">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dog_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dog_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SepiaCodingTask">
        <activity android:name=".view.activities.AnimalDetails"></activity>
        <activity android:name=".view.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>